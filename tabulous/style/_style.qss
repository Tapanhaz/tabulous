QWidget {
    background-color: #[background];
    color: #[foreground];
}

QWidget[emphasized="true"] {
    background-color: #[highlight0];
}

QWidget[emphasized="true"] > QFrame {
    background-color: #[highlight0];
}

QWidget:!enabled {
    background-color: #[background];
    color: gray;
}

QFrame:!enabled {
    background-color: #[background];
    color: gray;
    border-color: gray;
}

/* QPushButton */

QPushButton {
  background-color: #[background0];
  border-radius: 2px;
  padding: 4px;
  border: 0px;
}

QPushButton:hover {
  background-color: #[highlight0];
}

QPushButton:pressed {
  background-color: #[highlight1];
}

QPushButton:checked {
  background-color: #[highlight1];
}

QPushButton:disabled {
  background-color: #[background];
  border-radius: 2px;
  padding: 4px;
  border: 0px;
}

/* QComboBox */

QComboBox {
  border-radius: 2px;
  background-color: #[background1];
  color: #[foreground];
  border: 1px solid #[highlight0];
}

